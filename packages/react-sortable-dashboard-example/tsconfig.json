{
  "include": [
    "pages/**/*",
    "store/**/*",
    "types/**/*",
    "components/**/*"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "jsx": "preserve",
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules"
  ]
}
